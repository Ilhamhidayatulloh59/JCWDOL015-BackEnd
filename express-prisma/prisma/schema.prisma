generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  Author
  Admin
}

model Author {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(Author)
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
